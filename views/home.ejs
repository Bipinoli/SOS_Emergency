<% include partials/header %>
<br><br>
<div class="container">
<center>
	<img src="/public/images/emer.png" class="sosbtn">
	<br>
</center>
	<div class="submit-phone hide">
		<form id="contactForm" role="form">
			<div class="form-group">
				<label for="phoneNumber">Phone Number</label>
				<input type="text" id="phoneNumber" placeholder="+9779860917264" class="form-control">
				<button class="btn btn-default" type="submit">Submit</button>
			</div>
		</form>
	</div>
</div><!-- /.container -->

<script type="text/javascript">
	$(document).ready(function(){
        $('#contactForm').on('submit', function(e) {
            e.preventDefault();

            $.ajax({
                url: '/',
                method: 'POST',
                dataType: 'json',
                data: {
                    phoneNumber: $('#phoneNumber').val(),
                }
            }).done(function (data) {
                $(".submit-phone").addClass('hide');
            }).fail(function (error) {
                alert("Error! Please check the logs!");
                console.log(JSON.stringify(error));
            });
        });

		$(".sosbtn").click(function(){
	         $(".submit-phone").removeClass('hide');
		});
	});

</script>

